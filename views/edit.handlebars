<section id="edit-container">
    <div class="edit-container-info">
        <h1>Edit Announcement</h1>
        <form action="/edit/{{coin._id}}" method="POST">
            <label>Name:</label>
            <input type="text" id="name" name="name" value="{{coin.name}}">
            <label>Image:</label>
            <input type="text" id="image" name="imageUrl" value="{{coin.imageUrl}}">
            <label>Price:</label>
            <input type="number" id="price" name="price" value="{{coin.price}}">
            <label>Description:</label>
            <textarea name="description" id="description">{{coin.description}}</textarea>
            <label>Payment method:</label>
            <select id="payment" name="payment">
                <option value="crypto-wallet" {{#if coin.selectcrypto-wallet}}selected{{/if}}>Crypto Wallet</option>
                <option value="credit-card" {{#if coin.selectcredit-card}}selected{{/if}}>Credit Card</option>
                <option value="debit-card" {{#if coin.selectdebit-card}}selected{{/if}}>Debit Card</option>
                <option value="paypal" {{#if coin.selectpaypal}}selected{{/if}}>PayPal</option>
            </select>
            <input type="submit" id="btn" value="EDIT"></input>
        </form>
    </div>
</section>